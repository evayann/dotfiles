[module/backlight]
type = custom/script
interval = 0.2
exec = ~/.config/polybar/scripts/backlight.sh

scroll-up = exec light -A 5
scroll-down = exec light -U 5

format-prefix = " "
format-foreground = ${colors.background}
format-background = ${colors.background-bis}

label = %output%%
format-padding = 1

