format-full-prefix-foreground = ${colors.background}
format-full-foreground 		  = ${colors.background}
format-full-background  	  = ${colors.background-bis}
format-full-underline 		  = ${colors.charging}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 
